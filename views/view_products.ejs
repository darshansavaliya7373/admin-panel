<%-include('header')%>

<main id="main" class="d-flex flex-wrap" style="justify-content: center !important;">
    <div class="col-4 d-flex">
        <form action="/products/searchproducts" method="post">
            <input type="search" name="searchproducts" class="col-5 form-control mb-3" placeholder="search products">
        </form>
       
    </div>
    
    <div class="d-flex flex-wrap w-100">
        <%for(var i of products){%>
            <div class="col-3  p-2">
                <div>
                    <img src="<%=i.avatar%>" width="100%" >
                </div>
                <div class="p-3" style="background-color: rgb(230, 230, 230);">
                    <h6 class="px-2"><%=i.categoryid.category%> / <%=i.subcategoryid.subcategory%> / <%=i.extracategoryid.extracategory%></h6>
                    <h4 class="px-2 -"><%=i.pname%></h4>
                    <h5 class="px-2 fw-bold">₹ <%=i.price%> /-</h5>
                </div>
            </div>
            <%}%>
    </div>



    <div class="d-flex flex-wrap w-100">
        <%for(var i of search){%>
            <div class="col-3  p-2">
                <div>
                    <img src="<%=i.avatar%>" width="100%" >
                </div>
                <div class="p-3" style="background-color: rgb(230, 230, 230);">
                    <h6 class="px-2"><%=i.category%></h6>
                    <h4 class="px-2 -"><%=i.pname%></h4>
                    <h5 class="px-2 fw-bold">₹ <%=i.price%> /-</h5>
                </div>
            </div>
            <%}%>
        </div>
    </main>


<%-include('footer')%>